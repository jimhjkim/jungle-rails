<h1>Login</h1>
<br>
<%= form_tag '/login' do %>
  <div class='form-group' style='width: 50%;'>
    Email: <%= text_field_tag :email, nil, class: 'form-control' %>
    <br>
    Password: <%= password_field_tag :password, nil, class: 'form-control' %>
    <br>
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>