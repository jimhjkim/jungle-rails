<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
      <span class='label label-danger'>Finished</span>
    <% else if  sale.upcoming? %>
      <span class='label label-warning'>Upcoming</span>
    <% else %>
      <span class='label label-sucess'>Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
</tr>